@model List<Orders>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>
@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>OrderId</th>
                <th>CustomerId</th>
                <th>Price</th>
                <th>TrackingId</th>
                <th>OrderDate</th>
                <th>Status</th>
                <th>ProductId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.RowKey</td>
                    <td>@order.PartitionKey</td>
                    <td>@order.Price</td>
                    <td>@order.TrackingId</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>@order.Status</td>
                    <td>@order.ProductId</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}